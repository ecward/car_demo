<?xml version="1.0"?>
<launch>
  <arg name="model" default="$(find prius_description)/urdf/prius.urdf"/>
  <arg name="rvizconfig" default="$(find car_demo)/rviz/demo.rviz" />
  <arg name="x_start" default="3.0" />
  <arg name="y_start" default="-12.0" />
  <arg name="z_start" default="0.5" />
  <arg name="yaw_start" default="0.16" />

  <param name="robot_description" textfile="$(arg model)"/>

<!-- can't figure out why gazebo crashes on control-c -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="verbose" value="true"/>
    <arg name="world_name" value="$(find car_demo)/worlds/mcity.world"/>
    <arg name="debug" value="false" />
  </include>

  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" >
    <!-- <remap from="robot_description" to="different_robot_description" /> -->
    <!-- <remap from="joint_states" to="/prius/joint_states" /> -->
  </node>


  <node pkg="fake_localization" type="fake_localization" name="fake_localization">
  </node>


  <!--
  <node pkg="tf2_ros" type="static_transform_publisher" name="very_inaccurate_odom" args="0 0 0 0 0 0 odom base_link"/>
  -->

<!-- TODO figure out how we can run joystick at the same time as ctrl...
  <node pkg="car_demo" type="joystick_translator" name="joystick_translator"/>
-->
  <!-- Run two joy nodes publishing to the same topic, just to cover two possible joystick locations -->
  <node pkg="joy" type="joy_node" name="joy_node0">
    <param name="dev" value="/dev/input/js0"/>
  </node>
  <node pkg="joy" type="joy_node" name="joy_node1">
    <param name="dev" value="/dev/input/js1"/>
  </node>

  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model"
  args="-param robot_description -urdf -x $(arg x_start) -y $(arg y_start) -z $(arg z_start) -Y $(arg yaw_start) -model prius"/>

<!-- start at default location
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -x 3 -y -12 -z 0.5 -model prius"/>
-->

<!-- start at rightmost parking lot
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -x 25 -y -370 -z 0.5 -model prius"/>
-->

<!-- start on road, close to leftmost parking lot
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -x 248 -y 352 -z 0.5 -Y 2 -model prius"/>
-->

<!-- start on leftmost parking lot -->
<!--
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -x 154.0 -y 360.0 -z 0.5 -Y -0.16 -model prius"/>
-->


<!-- start on road, close to prototype safe stop area
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -x 26.2  -y -165.0 -z 0.5 -Y -1.7 -model prius"/>
-->

<!--
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />
-->
</launch>
